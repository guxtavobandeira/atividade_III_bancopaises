QUESTOES FEITAS- GUSTAVO BANDEIRA

--1
select * from tabela_paises;

--2
select cidade
from tabela_paises 
where pais='Brazil'

--3
select cidade 
from tabela_paises
where regiao='Ceará'

--4
select regiao, count(regiao) as total_regioes_china
from tabela_paises
where pais='China' group by regiao

--5
select regiao, count(regiao) as total_regioes_canada
from tabela_paises
where pais='Canadá' group by regiao

--6
select pais, count(pais)
from tabela_paises
group by pais

--7
select cidade, count(distinct cidade)
from tabela_paises
where pais='Brazil'
group by cidade

--8
select pais, count(pais) as total_regioes 
from tabela_paises 
group by pais
